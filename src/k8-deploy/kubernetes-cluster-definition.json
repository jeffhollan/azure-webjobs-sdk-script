{
    "apiVersion": "vlabs",
    "properties": {
      "orchestratorProfile": {
        "orchestratorType": "Kubernetes",
        "orchestratorRelease": "1.9"
      },
      "masterProfile": {
        "count": 3,
        "dnsPrefix": "%K8_DNS_PREFIX%",
        "vmSize": "Standard_D1_v2",

        "vnetSubnetId": "%K8_VNET_SUBNET_MASTER%",
        "firstConsecutiveStaticIP": "%K8_VNET_SUBNET_MASTER_FIRSTIP",
        "vnetCidr": "%K8_VNET_CIDR%"
      },
      "agentPoolProfiles": [
        {
          "name": "diskhost",
          "count": 3,
          "vmSize": "%K8_NODE_SIZE%",
          "availabilityProfile": "AvailabilitySet",
          "vnetSubnetId": "%K8_VNET_SUBNET_AGENT%",
          "customNodeLabels": {
            "functions-role": "diskhost",
            "beta.kubernetes.io/fluentd-ds-ready" : "true"
          }
        },
        {
            "name": "workerhost-linux",
            "count": 3,
            "vmSize": "%K8_NODE_SIZE%",
            "availabilityProfile": "AvailabilitySet",
            "OSDiskSizeGB": 512,
            "storageProfile" : "ManagedDisks",
            "diskSizesGB": [1023, 1023],
            "vnetSubnetId": "%K8_VNET_SUBNET_AGENT%",
            "customNodeLabels": {
                "functions-role": "worker"            
              }
          },
          {
            "name": "workerhost-windows",
            "count": 3,
            "vmSize": "%K8_NODE_SIZE%",
            "availabilityProfile": "AvailabilitySet",
            "OSDiskSizeGB": 512,
            "storageProfile" : "ManagedDisks",
            "vnetSubnetId": "%K8_VNET_SUBNET_AGENT%",
            "osType": "Windows",
            "customNodeLabels": {
                "functions-role": "worker",
                "beta.kubernetes.io/fluentd-ds-ready" : "true"
              }
          }
      ],
      "linuxProfile": {
        "adminUsername": "%MGMT_USERNAME%",
        "ssh": {
          "publicKeys": [
            {
              "keyData": "%SSH_KEYDATA%"
            }
          ]
        }
      },
      "servicePrincipalProfile": {
        "clientId": "%SP_CLIENTID%",
        "secret": "%SP_SECRET%"
      }
    }
  }